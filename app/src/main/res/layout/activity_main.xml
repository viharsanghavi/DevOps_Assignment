<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.promact.calculator.MainActivity">

    <Button
        android:layout_width="285dp"
        android:layout_height="60dp"
        android:text="c"
        android:id="@+id/clear"
        android:clickable="false"
        android:onClick="pressclear"
        android:layout_below="@+id/textView2"
        android:layout_toLeftOf="@+id/button9"
        android:layout_toStartOf="@+id/button9"
        android:layout_marginTop="32dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter Expression"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Result"
        android:id="@+id/textView2"
        android:layout_marginTop="39dp"
        android:textSize="30dp"
        android:layout_below="@+id/textView"
        android:layout_toRightOf="@+id/viewStub"
        android:layout_toEndOf="@+id/viewStub" />

    <Button

        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="7"
        android:id="@+id/b7"
        android:layout_below="@+id/clear"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="17dp"
        android:onClick="press7" />

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="4"
        android:id="@+id/b4"
        android:layout_below="@+id/b7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:onClick="press4" />

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="1"
        android:id="@+id/b1"
        android:layout_below="@+id/b4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:nestedScrollingEnabled="false"
        android:onClick="press1" />

    <Button

        android:layout_width="240dp"
        android:layout_height="60dp"
        android:text="0"
        android:id="@+id/button4"
        android:layout_below="@+id/b1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:layout_alignRight="@+id/button7"
        android:layout_alignEnd="@+id/button7"
        android:onClick="press0" />

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="8"
        android:id="@+id/button"
        android:onClick="press8"
        android:layout_above="@+id/b4"
        android:layout_toRightOf="@+id/b7"
        android:layout_toEndOf="@+id/b7"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp" />

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="5"
        android:id="@+id/button2"
        android:layout_alignTop="@+id/b4"
        android:layout_toLeftOf="@+id/button5"
        android:layout_toStartOf="@+id/button5"
        android:onClick="press5" />

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="2"
        android:id="@+id/button3"
        android:onClick="press2"
        android:layout_alignTop="@+id/b1"
        android:layout_toLeftOf="@+id/button5"
        android:layout_toStartOf="@+id/button5" />

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="9"
        android:id="@+id/button5"
        android:onClick="press9"
        android:layout_alignTop="@+id/button"
        android:layout_toRightOf="@+id/button"
        android:layout_toEndOf="@+id/button"
        android:layout_marginLeft="15dp" />

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="6"
        android:id="@+id/button6"
        android:layout_alignTop="@+id/button2"
        android:layout_alignLeft="@+id/button5"
        android:layout_alignStart="@+id/button5"
        android:onClick="press6" />

    <Button

        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="3"
        android:id="@+id/button7"
        android:layout_above="@+id/button4"
        android:layout_alignLeft="@+id/button6"
        android:layout_alignStart="@+id/button6"
        android:onClick="press3" />

    <Button

        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="/"
        android:id="@+id/button8"
        android:onClick="pressdiv"
        android:layout_above="@+id/b4"
        android:layout_toRightOf="@+id/button5"
        android:layout_toEndOf="@+id/button5"
        android:layout_marginLeft="15dp" />

    <Button

        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="*"
        android:id="@+id/button9"
        android:layout_below="@+id/button8"
        android:layout_alignLeft="@+id/button8"
        android:layout_alignStart="@+id/button8"
        android:layout_marginTop="10dp"
        android:onClick="pressmul" />

    <Button

        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="-"
        android:id="@+id/button10"
        android:layout_above="@+id/button4"
        android:layout_alignLeft="@+id/button9"
        android:layout_alignStart="@+id/button9"
        android:onClick="pressminus" />

    <Button

        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="+"
        android:id="@+id/button11"
        android:layout_alignTop="@+id/button4"
        android:layout_alignLeft="@+id/button10"
        android:layout_alignStart="@+id/button10"
        android:onClick="pressplus" />

    <Button

        android:layout_width="60dp"
        android:layout_height="270dp"
        android:text="="
        android:id="@+id/button12"
        android:onClick="pressequ"
        android:layout_alignTop="@+id/button8"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ViewStub
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/viewStub"
        android:layout_alignTop="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
</ScrollView>